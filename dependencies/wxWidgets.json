{
    "name": "wxWidgets",
    "cleanup": [
        "/bin",
        "/share/bakefile"
    ],
    "config-opts": [
        "--with-gtk=2",
        "--with-zlib",
        "--with-opengl",
        "--with-regex=builtin",
        "--with-libpng=builtin",
        "--with-libxpm=builtin",
        "--with-libjpeg=builtin",
        "--with-libtiff=builtin",
        "--disable-sdltest",
        "--disable-precomp-headers",
        "--enable-unicode",
        "--enable-display",
        "--enable-propgrid",
        "--enable-debug_info",
        "--enable-debug_gdb",
        "--disable-debug",
        "--disable-debug_flag",
        "--with-expat=builtin"
    ],
    "build-options": {
        "cxxflags": "-std=c++0x"
    },
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.3/wxWidgets-3.1.3.tar.bz2",
            "sha256": "fffc1d34dac54ff7008df327907984b156c50cff5a2f36ee3da6052744ab554a"
        }
    ]
}
